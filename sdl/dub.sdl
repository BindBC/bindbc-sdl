name "sdl"
description "Dynamic and static bindings to SDL2, SDL2_image, SDL2_mixer, SDL2_ttf and SDL2_net."
homepage ""
authors "Mike Parker"
license "Boost"
targetType "staticLibrary"
targetPath "../lib"
targetName "BindBCSDL"
dflags "-betterC"

configuration "dynamic" {
    dependency "bindbc-loader" version="~>0.1.0"
}

configuration "static" {
    versions "BindSDL_Static"
    libs "SDL2"
}